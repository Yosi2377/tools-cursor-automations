{
  "browser": {
    "headless": false,
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "timeout": 30000
  },
  "baseUrl": "http://localhost:3000",
  "auth": {
    "enabled": true,
    "url": "/login",
    "selectors": {
      "username": "input[name='username'], input[type='text']",
      "password": "input[name='password'], input[type='password']",
      "submitButton": "button[type='submit'], input[type='submit']"
    },
    "credentials": {
      "username": "",
      "password": ""
    }
  },
  "screenshots": {
    "enabled": true,
    "directory": "Screenshots",
    "captureOnError": true
  },
  "selectors": {
    "mainContainer": "#root, #app, main",
    "errorMessages": ".error, .error-message, [role='alert']",
    "loadingIndicator": ".loading, .spinner"
  },
  "actions": {
    "defaultDelay": 1000,
    "retryAttempts": 3,
    "retryDelay": 2000
  }
} 