{
  "baseUrl": "http://localhost:8082/",
  "timeout": 30000,
  "viewport": {
    "width": 1280,
    "height": 720
  },
  "auth": {
    "enabled": false,
    "selectors": {},
    "credentials": {}
  },
  "gameActions": {
    "join": {
      "selector": "button:has-text('Join')",
      "timeout": 5000
    },
    "actions": [
      {
        "name": "startGame",
        "selector": "button:has-text('Start')",
        "timeout": 5000
      },
      {
        "name": "performAction",
        "selector": "button.action1",
        "timeout": 2000
      }
    ]
  }
} 